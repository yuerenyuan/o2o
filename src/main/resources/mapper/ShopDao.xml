<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.o2o.dao.ShopDao" >
    <insert id="insertShop" useGeneratedKeys="true" keyColumn="shop_id"
    keyProperty="shopId">
            INSERT tb_shop
            (owner_id,area_id,shop_category_id,shop_name,shop_desc
            ,shop_addr,phone,shop_img,priority,create_time,last_edit_time,enable_status
            ,advice)
            VALUE (#{owner.userId},#{area.areaId},#{shopCategory.shopCategoryId}
            ,#{shopName},#{shopDesc},#{shopAddr},#{phone},#{shopImg},#{priority}
            ,#{createTime},#{lastEditTime},#{enableStatus},#{advice})
    </insert >
    <update id="updateShop" parameterType="com.o2o.entity.Shop">
        UPDATE tb_shop
        <set>
            <if test="shopName!=null">shop_name=#{shopName},</if>
            <if test="shopDesc!=null">shop_desc=#{shopDesc},</if>
            <if test="shopAddr!=null">shop_addr=#{shopAddr},</if>
            <if test="phone!=null">phone=#{phone},</if>
            <if test="shopImg!=null">shop_img=#{shopImg},</if>
            <if test="priority!=null">priority=#{priority},</if>
            <if test="lastEditTime!=null">last_edit_time=#{lastEditTime},</if>
            <if test="enableStatus!=null">enable_status=#{enableStatus},</if>
            <if test="advice!=null">advice=#{advice},</if>
            <if test="area!=null">area_id=#{area.areaId},</if>
            <if test="shopCategory!=null">shop_category_id=#{shopCategory.shopCategoryId}</if>
        </set>
        where shop_id=#{shopId}
    </update>
    <resultMap id="shopMap" type="com.o2o.entity.Shop">
        <id column="shop_id" property="shopId"/>
        <result column="shop_name" property="shopName"/>
        <result column="shop_desc" property="shopDesc"/>
        <result column="shop_addr" property="shopAddr"/>
        <result column="phone" property="phone"/>
        <result column="shop_img" property="shopImg"/>
        <result column="priority" property="priority"/>
        <result column="create_time" property="createTime"/>
        <result column="last_edit_time" property="lastEditTime"/>
        <result column="enable_status" property="enableStatus"/>
        <result column="advice" property="advice"/>
        <association property="area" javaType="com.o2o.entity.Area">
            <id column="area_id" property="areaId"/>
            <result column="area_name" property="areaName"/>
        </association>
        <association property="owner" javaType="com.o2o.entity.PersonInfo">
            <id column="user_id" property="userID"/>
            <result column="name" property="name"/>
        </association>
        <association property="shopCategory" javaType="com.o2o.entity.ShopCategory">
            <id column="shop_category_id" property="shopCategoryId"/>
            <result column="shop_category_name" property="shopCategoryName"/>
        </association>
    </resultMap>
    <select id="queryShopById" resultMap="shopMap" parameterType="Integer">
        SELECT
              s.shop_id,
	          s.owner_id,
	          s.area_id,
	          a.area_name,
	          s.shop_category_id,
	          sc.shop_category_name,
	          s.shop_name,
	          s.shop_desc,
	          s.shop_addr,
	          s.phone,
	          s.shop_img,
	          s.priority,
	          s.create_time,
	          s.last_edit_time,
	          s.enable_status,
	          s.advice
	      FROM
	          tb_shop s,
	          tb_area a,
	          tb_shop_category sc
	      WHERE
	         a.area_id=s.area_id
	      and
	         sc.shop_category_id=s.shop_category_id
	      and
	        s.shop_id=#{shopId}
    </select>
</mapper>